{% use "form_div_layout.html.twig" %}

{% block form_label -%}
    {%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' form__label')|trim}) -%}
    {{- parent() -}}
{%- endblock form_label %}

{% block form_errors -%}
    {% if errors|length > 0 -%}
        {%- for error in errors -%}
            <div class="state__item error">
                <span class="state__text">{{ error.message }}</span>
            </div>
        {%- endfor -%}
    {% endif %}
{%- endblock form_errors %}

{% block form_widget_simple -%}
    {% if type is not defined or type not in ['file', 'hidden'] %}
        {%- set attr = attr|merge({class: (attr.class|default('') ~ ' form__control')|trim}) -%}
    {% endif %}

    {{- parent() -}}
{%- endblock form_widget_simple %}
