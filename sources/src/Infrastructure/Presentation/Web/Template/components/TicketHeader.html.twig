<div class="chat__header" id="public-chat-header" {{ attributes.defaults(stimulus_controller('TicketHeader')) }}>
    <div class="item">
        <div class="item__status">
            <div class="item__decoration">
                <i class="icon-mail"></i>
            </div>
        </div>
        <div class="item__inner">
            <input
                type="text"
                class="form__control"
                value="{{ ticketTitle }}"
                data-model="ticketTitle"
                data-action="input->TicketHeader#onInput"
                data-ticket-title-target="input"
            >
            <span class="item__text">{{ item.customerName|default('Customer') }}</span>
        </div>
    </div>

    <div class="chat__header-actions">
        {{ component('RecentTicketStatus', { item, isSimpleView: true, key: 'status-' ~ item.ticketId }) }}
        {{ component('RecentTicketPriority', { item, isSimpleView: true, key: 'priority-' ~ item.ticketId }) }}
        {{ component('RecentTicketAssignee', { item, isSimpleView: true, key: 'agent-' ~ item.ticketId }) }}

        <div class="dropdown">
            <a href="#" class="btn__primary btn__dropdown">
                <i class="icon-dots"></i>
                <span class="tooltip">
                    More
                </span>
            </a>
            <div class="dropdown__menu">
                <div class="dropdown__item">
                    <a href="#" class="btn__primary">
                        <i class="icon-customer-details"></i>
                        <span class="btn__text">
                            View customer details
                        </span>
                    </a>
                </div>
                <div class="dropdown__menu-bot">
                    <div class="dropdown__item">
                        <a href="#" class="btn__primary danger">
                            <i class="icon-trash"></i>
                            <span class="btn__text">
                                Delete request
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
