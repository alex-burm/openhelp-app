<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="//cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <script src="//unpkg.com/lucide@latest"></script>
</head>
<body class="bg-light">
<div class="min-vh-100 d-flex align-items-center justify-content-center p-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <!-- Header -->
                <div class="text-center mb-4">
                    <h4 class="fw-bold mb-1">Forgot Password?</h4>
                    <p class="text-secondary">Enter your email to reset your password</p>
                </div>

                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div id="emailSection">
                            {{ form_start(form) }}
                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">{{ message }}</div>
                                {% endfor %}

                                <div class="mb-4">
                                    <label for="email" class="form-label small fw-medium">Email Address</label>
                                    <div class="input-group">
                                          <span class="input-group-text bg-white border-end-0">
                                            <i data-lucide="mail" style="width: 18px; height: 18px;"></i>
                                          </span>
                                        {{ form_widget(form.email, {attr: {
                                            class: 'form-control border-start-0 ps-0'
                                        }}) }}
                                    </div>
                                    <div class="form-text mt-2">
                                        We'll send a verification code to this email address.
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary w-100 mb-3">
                                    <i data-lucide="send" class="me-2" style="width: 18px; height: 18px;"></i>
                                    Send Reset Code
                                </button>

                                <p class="text-center text-secondary small mb-0">
                                    Remember your password? <a href="{{ path('login') }}" class="text-decoration-none">Back to login</a>
                                </p>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

                <!-- Help Section -->
                <div class="text-center mt-4">
                    <p class="small text-secondary mb-0">
                        Need help? <a href="#" class="text-decoration-none">Contact Support</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    lucide.createIcons();
</script>
</body>
</html>
