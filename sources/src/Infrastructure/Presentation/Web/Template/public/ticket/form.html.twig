<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="//cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <script src="//unpkg.com/lucide@latest"></script>
</head>
<body class="bg-light">
<div class="min-vh-100 d-flex align-items-center justify-content-center p-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <!-- Login Card -->
                <div class="text-center mb-4">
                    <h4 class="fw-bold mb-1">Feedback Request</h4>
                </div>

                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}

                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.userName) }}
                                {{ form_widget(form.userName, {attr: {class: 'form-control'}}) }}
                                {{ form_errors(form.userName) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.userEmail) }}
                                {{ form_widget(form.userEmail, {attr: {class: 'form-control'}}) }}
                                {{ form_errors(form.userEmail) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.ticketTitle) }}
                                {{ form_widget(form.ticketTitle, {attr: {class: 'form-control'}}) }}
                                {{ form_errors(form.ticketTitle) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.ticketMessage) }}
                                {{ form_widget(form.ticketMessage, {attr: {class: 'form-control'}}) }}
                                {{ form_errors(form.ticketMessage) }}
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mb-3">
                                Send
                            </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
